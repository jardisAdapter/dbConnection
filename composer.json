{
    "name": "jardisadapter/dbconnection",
    "description": "DbConnection is a factory to create PDO database connections and delivers a professional PDO connection wrapper.",
    "version": "1.0.0",
    "type": "library",
    "license": "PolyForm-Noncommercial-1.0.0",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Jardis Development",
            "email": "jardisDev@headgent.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "jardisport/dbconnection": "^1.0",
        "jardissupport/dotenv": "^1.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^2.0.4",
        "squizlabs/php_codesniffer": "^3.11.2"
    },
    "autoload": {
        "psr-4": {
            "JardisAdapter\\DbConnection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JardisAdapter\\DbConnection\\Tests\\": "tests/"
        }
    },
    "homepage": "https://github.com/jardisAdapter/dbConnection",
    "support": {
        "issues": "https://github.com/jardisAdapter/dbConnection/issues",
        "email": "jardisDev@headgent.com"
    },
    "keywords": [
        "database",
        "connection",
        "pdo",
        "domain driven design",
        "JardisAdapter",
        "Adapter",
        "headgent"
    ]
}
